@model Hamporsesh.Application.Core.ViewModels.Questions.QuestionDetailDto

@{
    ViewData["Title"] = "Details";
}

<div>
    <h5>
        @Html.ActionLink(linkText: "Back", controllerName: "polls", actionName: "details", routeValues: new { id = Model.Question.PollId })
    </h5>
    <h4>
        Question Details | @Html.ActionLink(linkText: "Update", controllerName: "questions", actionName: "update", routeValues: new { id = Model.Question.Id }) |
        <a href="@Url.Action(action: "Delete", controller: "questions", values: new { id = Model.Question.Id }) " class="btn btn-danger">
            حذف
        </a>

    </h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Question.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Question.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Question.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Question.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Question.CreateDateTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Question.CreateDateTime)
        </dd>
    </dl>
</div>
<div>
    <h2>answer list</h2>
    @Html.ActionLink(linkText: "add answer", controllerName: "answers", actionName: "create", routeValues: new { questionId = Model.Question.Id })

    <table>
        @foreach (var answer in Model.Answers)
        {
            <tr>
                <td>
                    @answer.Title |
                </td>
                <td>
                    @Html.ActionLink(linkText: "Update", actionName: "Update", controllerName: "answers", new { id = answer.Id }) |
                    @Html.ActionLink(linkText: "حذف", actionName: "Delete", controllerName: "Answers",
routeValues: new { id = answer.Id }, htmlAttributes: new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </table>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
