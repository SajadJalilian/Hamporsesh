@model Hamporsesh.Application.Core.ViewModels.Polls.PollInputDto
@{
    var action = ViewContext.RouteData.Values["Action"];
}


<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="@action">
            <div asp-validation-summary="ModelOnly" class="text-danger" ></div>

            @Html.HiddenFor(model => model.UserId)
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PollStatus" class="control-label"></label>
                <input asp-for="PollStatus" class="form-control" />
                <span asp-validation-for="PollStatus" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="@action" class="btn btn-primary" />
                @if (action.ToString() == "Update")
                {
                    <a href="@Url.Action(action: "Delete", controller: "polls", values: new { id = Model.Id})" class=" btn btn-danger">
                        حذف
                    </a>
                }
              
            </div>
        </form>
    </div>
</div>