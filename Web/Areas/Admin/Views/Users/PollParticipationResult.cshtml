@model Hamporsesh.Application.Core.ViewModels.Users.UserOutputPollParticipateDto

@{
    ViewData["Title"] = "Details";
}
<div>
    <a asp-area="Admin" asp-controller="Users" asp-action="Profile" asp-route-id="@Model.User.Id">بازگشت</a>
</div>
<br />
<br />
<div>
    <h4>User Participation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
           User @Html.DisplayNameFor(model => model.User.DisplayName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.DisplayName)
        </dd>
        <dt class="col-sm-2">
           Poll @Html.DisplayNameFor(model => model.Poll.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Poll.Title)
        </dd> 
    </dl>
</div>
<br />
<div>
    <table>

        @foreach (var item in Model.Choices)
        {
            <tr>

                <td>
                    <p>@item.Answer.Title</p>
                </td>
  
            </tr>
        }
    </table>
</div>


@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
