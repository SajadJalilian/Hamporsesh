@model Hamporsesh.Application.Core.ViewModels.Users.UserInputDto

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @*<form asp-action="Update">*@

            <form asp-action="Update" data-ajax="true" data-ajax-method="Post" data-ajax-success="onSuccessUpdateUser(data)" data-ajax-confirm="آیا مطمعن هستید؟">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @Html.HiddenFor(model => model.Id)
                <div class="form-group">
                    <label asp-for="DisplayName" class="control-label"></label>
                    <input asp-for="DisplayName" class="form-control" />
                    <span asp-validation-for="DisplayName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Update" class="btn btn-primary" />
                </div>
            </form>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>

        function onSuccessUpdateUser(data) {
            console.log("onSuccessUpdateUser")
            if (data.result == true) {
                console.log("True")
                window.location.href = data.link;
            } else {
                alert(data.message);

            }
        }
    </script>
}
