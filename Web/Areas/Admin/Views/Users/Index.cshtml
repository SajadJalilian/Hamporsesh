@model IEnumerable<Hamporsesh.Application.Core.ViewModels.Users.UserOutputDto>

@{
    ViewData["Title"] = "users list";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DisplayName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateDateTimeStr)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DisplayName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDateTimeStr)
            </td>

            <td>
                @Html.ActionLink("Profile", "Profile",controllerName:"Users", new { id = item.Id })
            </td>
        </tr>
        }
    </tbody>
</table>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        function onSuccessDelete(data) {
            console.log("onSuccessDelete" + data)
            if (data.result == true) {
                alert("opration is sucssed: " + data.message);
                window.location.href = data.link;
            } else {
                alert("opration is failed: " + data.message);
            }
        }

    </script>

}
